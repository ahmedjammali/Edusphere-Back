        }

        .filter-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            align-items: start;
        }

        .filter-item {
            background: white;
            padding: 12px;
            border-radius: 5px;
            border: 1px solid #e9ecef;
